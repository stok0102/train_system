<h1 id="jumbotron">Go by Train</h1>


<div class="row">
  <div class="col-md-6">
    <h2>Trains</h2>
    <% if @trains.any?() %>

    <ul>
      <% @trains.each do |train| %>
      <li><%= train.name() %><form action="/train/<%= train.id() %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button class="btn btn-success" type="submit" name="button">Delete Train</button>
          </form></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no trains yet!</p>
    <% end %>

    <p>Add a New Train</p>

    <form action="/trains" method="post">
      <label for="train_name">Assign a name to your train:</label>
      <input type="text" name="train_name" id="train_name" required>

      <button class="btn btn-success" type="submit">Add Train</button>
    </form>

  </div>

  <div class="col-md-6">

    <h2>Cities</h2>
    <% if @cities.any?() %>

    <ul>
      <% @cities.each do |city| %>
      <li><%= city.name() %><form action="/city/<%= city.id() %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button class="btn btn-success" type="submit" name="button">Delete City</button>
          </form></li>
      <% end %>
    </ul>
    <% else %>
    <p>There are no cities yet!</p>
    <% end %>

    <p>Add a New City</p>

    <form action="/cities" method="post">
      <label for="city_name">Assign a name to your city:</label>
      <input type="text" name="city_name" id="city_name" required>

      <button class="btn btn-success" type="submit">Add City</button>
    </form>


  </div>
</div>
